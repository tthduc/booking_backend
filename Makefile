DB_URL=postgresql://root:secret@localhost:5432/booking_db?sslmode=disable

postgres:
	docker run --name postgres12 -p 5432:5432 -e POSTGRES_USER=root -e POSTGRES_PASSWORD=secret -d postgres:12-alpine

createdb:
	docker exec -it postgres12 createdb --username=root --owner=root booking_db

dropdb:
	docker exec -it postgres12 dropdb booking_db

migrateup:
	migrate -path db/migration -database "$(DB_URL)" -verbose up

migratedown:
	migrate -path db/migration -database "$(DB_URL)" -verbose down

sqlc:
	sqlc generate

test:
	go test -v -cover ./...

server:
	go run main.go

mock:
	mockgen -package mockdb -destination db/mock/store.go booking-backed/db/sqlc Store

.PHONY: postgres, createdb, dropdb, migrateup, sqlc, test, server, mock